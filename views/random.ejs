<%- include('header') %>

<div class="container mt-5">
    <div class="row justify-content-center">
        <h1><strong>Random Word</strong></h1>
    </div>
    <div class="row justify-content-center mt-5">
        <div class="box-title">
            <h2> <%= items.japanWord %> </h2>
        </div>
    </div>
    <div class="row justify-content-around mt-5">
        <div class="box">
            <h2>Romaji?</h2>
            <div class="box-answer">
                <h2><%= items.word %></h2>
            </div>
        </div>
        <div class="box">
            <h2>Meaning?</h2>
            <div class="box-answer">
                <h2><%= items.meaning %></h2>
            </div>
        </div>
        <div class="box">
            <h2>Type?</h2>
            <div class="box-answer">
                <h2><%= items.category.category %></h2>
            </div>
        </div>

        <!-- <div class="box-answer">Meaning?</div>
        <div class="box-answer">Type?</div> -->
    </div>
    <div class="row justify-content-center mt-5">
        <a href="/random-word" class="btn btn-danger">Shuffle</a>
    </div>
</div>

<%- include('footer') %>